{
  "name": "zwip-core",
  "module": "src/index.ts",
  "type": "module",
  "main": "./dist/Zwip.js",
  "exports": {
    ".": {
      "import": "./dist/Zwip.js",
      "require": "./dist/Zwip.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "start": "mkdir -p ./run && cd ./run && bun run ../index.ts",
    "build:bundle": "bun build src/index.ts --target bun --outfile ./dist/Zwip.js --minify --sourcemap",
    "build:executable:apple-silicon": "bun build src/index.ts --compile --outfile ./dist/Zwip --minify",
    "build:executable:windows-x64": "bun build src/index.ts --compile --target bun-windows-x64 --outfile ./dist/Zwip --minify",
    "build:declarations": "tsc --outDir ./dist/types",
    "dev": "mkdir -p ./run && cd ./run && bun --watch ../src/index.ts",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.1.2",
    "bun-types": "latest",
    "eslint": "^9.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@discordjs/voice": "^0.17.0",
    "chalk": "^5.3.0",
    "discord.js": "^14.15.2",
    "reflect-metadata": "^0.2.2",
    "serverline": "^1.6.0"
  }
}
