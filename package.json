{
  "name": "zwip-core",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "mkdir -p ./run && cd ./run && bun run ../index.ts",
    "build:bundle": "bun build index.ts --target bun --outfile ./dist/Zwip.js --minify",
    "build:executable:apple-silicon": "bun build index.ts --compile --outfile ./dist/Zwip --minify",
    "build:executable:windows-x64": "bun build index.ts --compile --target bun-windows-x64 --outfile ./dist/Zwip --minify",
    "dev": "mkdir -p ./run && cd ./run && bun --watch ../index.ts",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.1.2",
    "bun-types": "latest",
    "eslint": "^9.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@discordjs/voice": "^0.17.0",
    "chalk": "^5.3.0",
    "discord.js": "^14.15.2",
    "reflect-metadata": "^0.2.2",
    "serverline": "^1.6.0"
  }
}
